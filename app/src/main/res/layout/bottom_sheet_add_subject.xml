<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과목 추가하기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/et_subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="과목명 (예: 알고리즘)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_subject_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="학년 (예: 2)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_subject_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="학기 (예: 2)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_subject_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="학과 (예: 컴퓨터공학)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_subject_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="수업 요일 (예: 월요일)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_subject_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="시작 시간 (예: 09:00)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_subject_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="종료 시간 (예: 10:30)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_save_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장" />
</LinearLayout>