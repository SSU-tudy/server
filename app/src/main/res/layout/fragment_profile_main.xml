<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_background"
                android:background="@drawable/circle"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컴퓨터학부 | 2학년 2학기"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 프로필 수정 버튼 -->
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textSize="12sp"
                android:padding="8dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <!-- 태그 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관련 태그"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp" />

        <!-- 내 활동 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 활동"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_sales_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판매 내역"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_my_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내가 쓴 글"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_study_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공부 기록"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_timetable_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024 - 2학기 시간표"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목 추가하기" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:columnCount="6"
            app:rowCount="13">
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</ScrollView>