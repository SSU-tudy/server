<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewCompleteSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".SignupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 앱 제목 -->
        <TextView
            android:id="@+id/tvCompleteSignupTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SSU : Study with me"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 이메일 입력 -->
        <EditText
            android:id="@+id/etCompleteEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvCompleteSignupTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/etCompletePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/etCompleteEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 학생 이름 입력 -->
        <EditText
            android:id="@+id/etStudentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="학생 이름"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/etCompletePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 학년 스피너 -->
        <Spinner
            android:id="@+id/spinnerCompleteGrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/etStudentName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 학기 스피너 -->
        <Spinner
            android:id="@+id/spinnerCompleteSemester"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerCompleteGrade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 학과 스피너 -->
        <Spinner
            android:id="@+id/spinnerCompleteDepartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerCompleteSemester"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 회원가입 완료 버튼 -->
        <Button
            android:id="@+id/btnCompleteSignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="회원가입 완료"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/spinnerCompleteDepartment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>